set -u

`sudo cat /etc/default/<%= config[:AMI_USER] %>`

cat > sources.list <<EOF
deb s3://${AWS_ACCESS_KEY_ID}:[${AWS_SECRET_ACCESS_KEY}]@s3-us-west-2.amazonaws.com/<%= config[:AMI_BUCKET] %> prod main
EOF

cat sources.list | sudo tee -a /etc/apt/sources.list
sudo apt-get update
