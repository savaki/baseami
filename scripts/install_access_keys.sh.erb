#!/bin/bash

set -u 
set -e 

cat > <%= config[:AMI_USER] %> <<EOF

export AWS_ACCESS_KEY_ID="<%= config[:AWS_ACCESS_KEY_ID] %>"
export AWS_SECRET_ACCESS_KEY="<%= config[:AWS_SECRET_ACCESS_KEY] %>"

EOF

TARGET=/etc/default/<%= config[:AMI_USER] %>

sudo mv <%= config[:AMI_USER] %> ${TARGET}
sudo chown <%= config[:AMI_USER] %>:<%= config[:AMI_USER] %> ${TARGET}
sudo chmod 400 ${TARGET}
